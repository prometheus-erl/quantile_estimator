{erl_opts, [debug_info]}.

{project_plugins, [
  rebar3_hex,
  rebar3_ex_doc
]}.

{cover_enabled, true}.

{xref_checks, [undefined_function_calls]}.

{deps, []}.
{eunit_opts, [verbose]}.

{hex, [
    {doc, #{provider => ex_doc}}
]}.

{ex_doc, [
     {source_url, <<"https://github.com/prometheus-erl/quantile_estimator">>},
     {main, <<"readme">>},
     {extras, [{'README.md', #{title => <<"Overview">>}},
               {'LICENSE', #{title => <<"License">>}}
              ]}
]}.
